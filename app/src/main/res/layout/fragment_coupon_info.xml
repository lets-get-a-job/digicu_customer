<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/coupon_info_coupon_card"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_coupon_imgv"
                android:src="@drawable/sample_coupon"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/coupon_stamp_0"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_1"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_2"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_3"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_4"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/coupon_stamp_5"
                        android:layout_marginRight="15dp"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_6"
                        android:visibility="invisible"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_7"
                        android:visibility="invisible"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_8"
                        android:visibility="invisible"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/coupon_stamp_9"
                        android:visibility="invisible"
                        android:src="@drawable/stamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/coupon_info_coupon_count"
                android:visibility="gone"
                android:text="40/10"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#6F000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/digicu_dark_gray_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/shop_name"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:id="@+id/coupon_info_shop_name"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/shop_owner"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:id="@+id/coupon_info_shop_owner"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/shop_phone"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:id="@+id/coupon_info_shop_phone"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/shop_address"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:id="@+id/coupon_info_shop_address"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/shop_homepage"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="right"
                    android:autoLink="web"
                    android:textColorLink="@color/digicu_base_primary_color"
                    android:id="@+id/coupon_info_shop_homepage"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginBottom="5dp"
            android:background="@color/digicu_dark_gray_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coupon_kind_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>