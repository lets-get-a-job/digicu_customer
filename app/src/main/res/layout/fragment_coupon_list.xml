<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.main.trade.tabs.couponlist.CouponListFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="@string/coupon_trade_sell_req"
                android:padding="5dp"
                android:textSize="20dp"
                android:textColor="@color/digicu_black_color"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coupon_sell_req_recyclerview"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:text="@string/coupon_trade_buy_req"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textSize="20dp"
                android:textColor="@color/digicu_black_color"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coupon_buy_req_recyclerview"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>