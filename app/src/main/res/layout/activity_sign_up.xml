<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="15dp"
        android:textColor="@color/digicu_base_primary_color"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="@string/signup"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="1dp"
            android:background="@drawable/edge"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="10dp"
                android:text="Social Domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/digicu_gray_color"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/signup_social_domain"
                android:padding="10dp"
                android:text="social_domain"
                android:textColor="@color/digicu_black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="1dp"
            android:orientation="vertical"
            android:background="@drawable/edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signup_email"
                android:padding="10dp"
                android:textColor="@color/digicu_black_color"
                android:text="email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/digicu_gray_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/signup_simple_pw"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:hint="simple password"
                android:textSize="15dp"
                android:drawableRight="@drawable/ic_baseline_lock_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/digicu_gray_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/signup_simple_pw_check"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:hint="simple password check"
                android:drawableRight="@drawable/ic_baseline_lock_24"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="1dp"
            android:orientation="vertical"
            android:background="@drawable/edge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signup_name"
                android:padding="10dp"
                android:text="name"
                android:textColor="@color/digicu_black_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/digicu_gray_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="10dp"
                    android:text="birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/digicu_gray_color"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/signup_birth"
                    android:padding="10dp"
                    android:gravity="right"
                    android:text="0000-00-00"
                    android:textColor="@color/digicu_black_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="@color/digicu_gray_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:id="@+id/signup_phone_number"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:inputType="phone"
                android:hint="Phone Number"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:text="이메일 수신 동의"
                android:layout_gravity="right"
                app:useMaterialThemeColors="true"
                android:buttonTint="@color/digicu_base_primary_color"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/do_signup"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>